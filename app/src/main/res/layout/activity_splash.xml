<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:foregroundGravity="center_horizontal"
         android:layout_marginTop="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/uniplannerlogo"
            android:layout_marginBottom="50dp"
            android:elevation="8dp"
            android:contentDescription="@string/app_logo"
            />

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UniPlanner"
            android:textColor="@color/blue_700"
            android:textSize="28sp"
            android:fontFamily="@font/bold"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_marginTop="416dp" />

        <TextView
            android:id="@+id/taglineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your All-in-One University Planner"
            android:textColor="@color/blue_500"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_below="@id/appNameTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/noteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage assignments, quizzes, exams, and classes efficiently by adding tasks."
            android:textColor="@color/black"
            android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/urbanist_reg"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/taglineTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="10dp" />


        <TextView
            android:id="@+id/footerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay organized and on top of your academic life!"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            android:fontFamily="@font/urbanist_reg"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
